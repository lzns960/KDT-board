<!doctype html>
<html lang="ko">
<head>
  <%- include('./partials/head.ejs') %>
</head>

<style>
  .inner {
    width: 80%;
    margin: auto;
  }
</style>

<body>
  <%- include('./partials/nav.ejs') %>
  
  <div class="inner mt-3" >
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb p-1 pl-2 pr-2">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/board">Board</a></li>
        <li class="breadcrumb-item active" aria-current="page"> Edit</li>
      </ol>
    </nav>

    <form action="/board/edit/title/<%=selectedArticle.title%>" method="POST" class="board_form">

      <div class="form-group">
        <label for="title"  class="mb-1" >Title</label>
        <input type="text" id="title" name="title" value="<%= selectedArticle.title %>" class="form-control" required />
      </div>

      <div class="form-group mt-3">
        <label for="content"  class="mb-1">Body</label>
          <textarea id="content" name="content" rows="5" class="form-control" required><%= selectedArticle.content %></textarea>
      </div>

      <div class="mt-3" >
        <a class="btn btn-primary" href="/board" style="float: left;">Back</a>
        <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
      </div>
    </form>
  </div>
</body>
</html>