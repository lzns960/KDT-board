<!doctype html>
<html lang="ko">
<head>
  <%- include('./partials/head.ejs') %>
</head>

<style>
  .inner {
    width: 80%;
    margin: auto;
  }
</style>

<body>
  <%- include('./partials/nav.ejs') %>
  
  <div class="inner mt-3" >
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb p-1 pl-2 pr-2">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/board">Board</a></li>
        <li class="breadcrumb-item active" aria-current="page">Title: <%= selectedArticle.title %></li>
      </ol>
    </nav>

    <div class="card "style="white-space: pre-line;">
      <h5 class="card-header p-2"><%= selectedArticle.title %></h5>
      <div class="row"> <!-- 1 -->
        <div class="col-md-7 col-lg-8 col-xl-9 order-sm-2 order-md-1"> <!-- 1 -->
          <div class=" p-2"><%= selectedArticle.content %></div>
        </div>
      </div>
    </div>

    <div class="mt-3">
      <a class="btn btn-primary" href="/board">Back</a>
      <a class="btn btn-primary" href="/board/edit/title/<%= selectedArticle.title %>">Edit</a>
      <a class="btn btn-primary" href="#" onclick="deleteArticle('<%= selectedArticle.title %>')">Delete </a>
    </div>
    
  </div>
</body>

<%- include('./partials/deleteArticle.ejs') %>
</html>