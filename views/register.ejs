<!doctype html>
<html lang="ko">
<head>
  <%- include('./partials/head.ejs') %>
</head>
<body>
  <%- include('./partials/nav.ejs') %>

  <div class="container-lg d-flex flex-column align-items-center bg-light w-50 p-5 rounded-3 mt-5">
    <h2>회원 가입</h2>
    <form action="/register" method="post" class="w-75">
      <div class="mt-3 id">
        <label for="input-email" class="mb-3">아이디</label>
        <input type="text" name="id" class="form-control" placeholder="아이디를 입력하세요." required />
      </div>
      <div class="mt-3 password">
        <label for="input-pw" class="mb-3">비밀번호</label>
        <input type="password" name="password" class="form-control" placeholder="비밀번호를 입력하세요." required />
      </div>
      <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary">회원 가입</button>
      </div>
    </form>
  </div>
</body>
</html>